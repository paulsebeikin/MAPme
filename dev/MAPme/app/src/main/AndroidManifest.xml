<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="psyblaze.mapme">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddImage"
            android:label="@string/add_image_title" />
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/home_title" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_title" />
        <activity
            android:name=".NewRecordActivity"
            android:label="@string/new_record_title" />
        <activity
            android:name=".NewRecordActivity2"
            android:label="@string/new_record_title" />
        <activity
            android:name=".NewRecordActivity3"
            android:label="@string/new_record_title" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/profileTitle"/>
        <activity
            android:name=".HelpActivity"
            android:label="Help"/>
    </application>

</manifest>